    <h1>Création d'un nouveau profil</h1>

    {{ form_start(form) }}

    {{ form_row(form.lastName, {
        label: 'Nom'
    }) }}
    {{ form_row(form.firstName, {
        label: 'Prénom'
    }) }}
    {{ form_row(form.birthDate, {
        label: 'Date de naissance'
    }) }}
    {{ form_row(form.address, {
        label: 'Adresse'
    }) }}
    {{ form_row(form.tel, {
        label: 'Téléphone'
    }) }}
    {{ form_row(form.essay, {
        label: 'Description'
    }) }}
    {{ form_row(form.category, {
        label: 'Catégorie de profil'
    }) }}

    {{ form_row(form.displayedToPeers, {
        label: 'afficher aux autres'
    }) }}

    <button type="submit" class="btn">Enregistrer</button>
    {{ form_end(form) }}
{% endblock %}
